<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/petition_staff_8dp"
            android:layout_marginTop="@dimen/petition_staff_8dp"
            android:background="@color/petition_staff_ffffff">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/petition_staff_10dp"
                android:layout_marginTop="@dimen/petition_staff_16dp"
                android:text="信访件编号:"
                android:textColor="@color/petition_staff_565656"
                android:textSize="@dimen/petition_staff_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView17"
                android:layout_marginRight="@dimen/petition_staff_40dp"
                android:layout_toEndOf="@+id/textView17"
                android:layout_toLeftOf="@+id/textView23"
                android:layout_toRightOf="@+id/textView17"
                android:maxLines="1"
                android:paddingLeft="@dimen/petition_staff_14dp"
                android:textColor="@color/petition_staff_777777"
                android:textSize="@dimen/petition_staff_12dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView19"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/petition_staff_10dp"

                android:textColor="@color/petition_staff_status_color"
                android:textSize="@dimen/petition_staff_12dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView17"
                android:layout_marginLeft="@dimen/petition_staff_10dp"
                android:layout_marginTop="@dimen/petition_staff_16dp"
                android:text="信访件内容:"
                android:textColor="@color/petition_staff_565656"
                android:textSize="@dimen/petition_staff_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView23"
                android:layout_alignRight="@+id/textView23"
                android:layout_alignTop="@+id/textView24"
                android:layout_marginLeft="@dimen/petition_staff_14dp"
                android:layout_toRightOf="@+id/textView24"

                android:maxLines="2"
                android:textColor="@color/petition_staff_777777"
                android:textSize="@dimen/petition_staff_12dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView26"
                android:layout_marginLeft="@dimen/petition_staff_10dp"
                android:layout_marginTop="@dimen/petition_staff_14dp"
                android:text="限办时间:"
                android:textColor="@color/refresh_color_4"
                android:textSize="@dimen/petition_staff_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView26"
                android:layout_alignStart="@+id/textView26"
                android:layout_alignTop="@+id/textView27"
                android:layout_toLeftOf="@+id/imageView15"
                android:layout_toStartOf="@+id/imageView15"

                android:textColor="@color/refresh_color_4"
                android:textSize="@dimen/petition_staff_12dp" />

        </RelativeLayout>
    </LinearLayout>
</layout>
