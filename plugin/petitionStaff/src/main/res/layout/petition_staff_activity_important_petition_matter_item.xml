<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/petition_staff_32dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/aorise_size70"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_bh"
            android:layout_alignBottom="@+id/txt_bh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:gravity="right"
            android:text="信访件编号"
            android:textColor="@color/petition_staff_565656"
            android:textSize="@dimen/petition_staff_12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:layout_marginRight="@dimen/aorise_size30"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"

            android:maxLines="2"
            android:textColor="@color/petition_staff_777777"
            android:textSize="@dimen/petition_staff_12dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/petition_staff_32dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/aorise_size70"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_name"
            android:layout_alignBottom="@+id/txt_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:gravity="right"
            android:text="信访人姓名"
            android:textColor="@color/petition_staff_565656"
            android:textSize="@dimen/petition_staff_12dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/textView3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/petition_staff_20dp"
            android:layout_toLeftOf="@+id/txt_lx"
            android:layout_toStartOf="@+id/txt_lx"
            android:text="信访类型"
            android:textColor="@color/petition_staff_565656"
            android:textSize="@dimen/petition_staff_12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:layout_marginRight="180dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"

            android:maxLines="2"
            android:textColor="@color/petition_staff_777777"
            android:textSize="@dimen/petition_staff_12dp" />

        <TextView
            android:id="@+id/txt_lx"
            android:layout_width="@dimen/petition_staff_90dp"
            android:layout_height="wrap_content"


            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/petition_staff_20dp"
            android:maxLines="2"
            android:textColor="@color/petition_staff_777777"
            android:textSize="@dimen/petition_staff_12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/petition_staff_32dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/aorise_size70"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_jb"
            android:layout_alignBottom="@+id/txt_jb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:gravity="right"
            android:text="级别"
            android:textColor="@color/petition_staff_565656"
            android:textSize="@dimen/petition_staff_12dp"
            android:textStyle="bold" />

        <TextView


            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/petition_staff_20dp"
            android:layout_toLeftOf="@+id/txt_sj"
            android:layout_toStartOf="@+id/txt_sj"
            android:text="登记时间"
            android:textColor="@color/petition_staff_565656"
            android:textSize="@dimen/petition_staff_12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_jb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/petition_staff_20dp"
            android:layout_marginRight="@dimen/aorise_size30"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"

            android:maxLines="2"
            android:textColor="@color/petition_staff_777777"
            android:textSize="@dimen/petition_staff_12dp" />

        <TextView
            android:id="@+id/txt_sj"
            android:layout_width="@dimen/petition_staff_90dp"
            android:layout_height="wrap_content"


            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/petition_staff_20dp"
            android:maxLines="2"
            android:textColor="@color/petition_staff_777777"
            android:textSize="@dimen/petition_staff_12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="@dimen/petition_staff_1dp"
        android:background="@color/petition_staff_aeaeae" />
</LinearLayout>
