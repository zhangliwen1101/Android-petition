<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/petition_staff_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="match_parent"
                    android:layout_height="266dp"
                    android:background="@drawable/petition_staff_banner" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_staff_44dp"
                    android:layout_marginLeft="@dimen/petition_staff_10dp"
                    android:layout_marginRight="@dimen/petition_staff_10dp"
                    android:layout_marginTop="@dimen/petition_staff_20dp"
                    android:background="@drawable/biankuang_zhouwei01">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="@dimen/petition_staff_16dp"
                        android:layout_height="@dimen/petition_staff_16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_staff_18dp"
                        app:srcCompat="@drawable/petition_staff_personal" />

                    <EditText
                        android:id="@+id/edt_id_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/petition_staff_18dp"
                        android:layout_toRightOf="@+id/imageView16"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入用户名"
                        android:textColor="@color/petition_staff_565656"
                        android:textColorHint="@color/petition_staff_aeaeae"
                        android:textSize="@dimen/petition_staff_11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_staff_44dp"
                    android:layout_marginLeft="@dimen/petition_staff_10dp"
                    android:layout_marginRight="@dimen/petition_staff_10dp"
                    android:layout_marginTop="@dimen/petition_staff_8dp"
                    android:background="@drawable/biankuang_zhouwei01">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="@dimen/petition_staff_16dp"
                        android:layout_height="@dimen/petition_staff_16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_staff_18dp"
                        app:srcCompat="@drawable/petition_staff_password" />

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/petition_staff_18dp"
                        android:layout_toRightOf="@+id/imageView17"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/petition_staff_hint_04"
                        android:inputType="textPassword"
                        android:textColor="@color/petition_staff_565656"
                        android:textColorHint="@color/petition_staff_aeaeae"
                        android:textSize="@dimen/petition_staff_11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_staff_44dp"
                    android:layout_marginBottom="@dimen/petition_staff_18dp"
                    android:layout_marginLeft="@dimen/petition_staff_10dp"
                    android:layout_marginRight="@dimen/petition_staff_10dp"
                    android:layout_marginTop="@dimen/petition_staff_57dp"
                    android:background="@color/petition_staff_0461bc">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/petition_staff_login"
                        android:textColor="@color/petition_staff_ffffff"
                        android:textSize="@dimen/petition_staff_14dp" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
