<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/aorise_include_toolbar" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/petition_47dp"
            android:background="@color/petition_ffffff">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/petition_32dp"
                android:text="@string/aorise_component_prompt_password"
                android:textColor="@color/petition_565656" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textView511"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/petition_53dp"
                android:layout_toEndOf="@+id/textView39"
                android:layout_toLeftOf="@+id/imageView19"
                android:layout_toRightOf="@+id/textView39"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="@string/petition_hint_04"
                android:inputType="textPassword"
                android:textColor="@color/petition_0461bc"
                android:textColorHint="@color/petition_aeaeae"
                android:textSize="@dimen/petition_10dp" />

            <TextView
                android:id="@+id/textView511"
                android:layout_width="match_parent"
                android:layout_height="@dimen/petition_1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/petition_10dp"
                android:background="@color/petition_aeaeae" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/petition_44dp"
            android:layout_marginBottom="@dimen/petition_138dp"
            android:layout_marginLeft="@dimen/petition_10dp"
            android:layout_marginRight="@dimen/petition_10dp"
            android:layout_marginTop="@dimen/petition_57dp"
            android:background="@color/petition_0461bc">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/next"
                android:textColor="@color/petition_ffffff"
                android:textSize="@dimen/petition_14dp" />
        </RelativeLayout>
    </LinearLayout>
</layout>
