                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ckb_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_32dp"
                        android:text="@string/petition_request_5"
                        android:textColor="@color/petition_565656" />

                    <CheckBox
                        android:id="@+id/ckb_3"
                        style="@style/Petition_checkbox"
                        android:layout_width="@dimen/petition_40dp"
                        android:layout_height="@dimen/petition_21dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
                        app:srcCompat="@drawable/petition_arrows" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ckb_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:layout_width="wrap_content"
