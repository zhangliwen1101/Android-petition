                        android:gravity="right"
                        android:lineSpacingExtra="3dp"

                        android:textColor="@color/petition_0461bc"
                        android:textSize="@dimen/petition_10dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <RelativeLayout
