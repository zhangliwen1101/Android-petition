                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/petition_10dp"
                        android:layout_height="@dimen/petition_10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
