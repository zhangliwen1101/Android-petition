                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ckb_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:layout_width="wrap_content"
