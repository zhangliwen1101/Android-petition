                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_11dp"
                    android:background="@color/petition_edf2f6">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_32dp"
                        android:text="@string/petition_request_1"
                        android:textColor="@color/petition_565656" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/petition_10dp"
                        android:layout_height="@dimen/petition_10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
                        app:srcCompat="@drawable/petition_arrows" />

                    <TextView
                        android:id="@+id/txt_address"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/aorise_size4"
                        android:layout_marginRight="@dimen/petition_53dp"
                        android:layout_marginTop="@dimen/aorise_size4"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_toRightOf="@+id/textView3"
                        android:background="@null"
                        android:gravity="right"
                        android:lineSpacingExtra="3dp"

                        android:textColor="@color/petition_0461bc"
                        android:textSize="@dimen/petition_10dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
