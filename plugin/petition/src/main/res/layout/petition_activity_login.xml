<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/petition_background"
        android:orientation="vertical">

        <include layout="@layout/aorise_include_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/petition_banner" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_44dp"
                    android:layout_marginLeft="@dimen/petition_10dp"
                    android:layout_marginRight="@dimen/petition_10dp"
                    android:layout_marginTop="@dimen/petition_20dp"
                    android:background="@drawable/biankuang_zhouwei01">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="@dimen/petition_16dp"
                        android:layout_height="@dimen/petition_16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_18dp"
                        app:srcCompat="@drawable/petition_id_card" />

                    <EditText
                        android:id="@+id/edt_id_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/petition_18dp"
                        android:layout_toRightOf="@+id/imageView16"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/petition_int_id_card_number"
                        android:textColor="@color/petition_565656"
                        android:textColorHint="@color/petition_aeaeae"
                        android:textSize="@dimen/petition_11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_44dp"
                    android:layout_marginLeft="@dimen/petition_10dp"
                    android:layout_marginRight="@dimen/petition_10dp"
                    android:layout_marginTop="@dimen/petition_8dp"
                    android:background="@drawable/biankuang_zhouwei01">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="@dimen/petition_16dp"
                        android:layout_height="@dimen/petition_16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_18dp"
                        app:srcCompat="@drawable/petition_password" />

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/petition_18dp"
                        android:layout_toRightOf="@+id/imageView17"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/petition_hint_04"
                        android:inputType="textPassword"
                        android:textColor="@color/petition_565656"
                        android:textColorHint="@color/petition_aeaeae"
                        android:textSize="@dimen/petition_11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_44dp"
                    android:layout_marginBottom="@dimen/petition_18dp"
                    android:layout_marginLeft="@dimen/petition_10dp"
                    android:layout_marginRight="@dimen/petition_10dp"
                    android:layout_marginTop="@dimen/petition_57dp"
                    android:background="@color/petition_0461bc">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/petition_login_name"
                        android:textColor="@color/petition_ffffff"
                        android:textSize="@dimen/petition_14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/petition_10dp"
                    android:layout_marginRight="@dimen/petition_10dp">

                    <Button
                        android:id="@+id/btn_regist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:text="@string/petition_register"
                        android:textColor="@color/petition_1b43cb"
                        android:textSize="@dimen/petition_11dp" />

                    <Button
                        android:id="@+id/btn_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:text="@string/petition_forget_password"
                        android:textColor="@color/petition_1b43cb"
                        android:textSize="@dimen/petition_11dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
