<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/aorise_include_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_11dp"
                    android:background="@color/petition_edf2f6">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_people"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_32dp"
                        android:text="@string/petition_contact"
                        android:textColor="@color/petition_565656" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/petition_10dp"
                        android:layout_height="@dimen/petition_10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
                        app:srcCompat="@drawable/petition_arrows" />

                    <TextView
                        android:id="@+id/txt_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView1"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_toLeftOf="@+id/imageView1"
                        android:layout_toStartOf="@+id/imageView1"
                        android:textColor="@color/petition_0461bc"
                        android:textSize="@dimen/petition_10dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_32dp"
                        android:text="* 内容"
                        android:textColor="@color/petition_565656" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/petition_10dp"
                        android:layout_height="@dimen/petition_10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
                        app:srcCompat="@drawable/petition_arrows" />

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_img_height"
                        android:layout_marginRight="21dp"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:layout_toRightOf="@+id/textView30"
                        android:layout_toStartOf="@+id/imageView2"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/petition_0461bc"
                        android:textSize="@dimen/petition_10dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_adjunct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_47dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/petition_10dp"
                        android:layout_height="@dimen/petition_10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/petition_22dp"
                        app:srcCompat="@drawable/petition_arrows" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_32dp"
                        android:text="@string/petition_adjunct"
                        android:textColor="@color/petition_565656" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/petition_10dp"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_44dp"
                    android:layout_marginBottom="@dimen/petition_138dp"
                    android:layout_marginLeft="@dimen/petition_10dp"
                    android:layout_marginRight="@dimen/petition_10dp"
                    android:layout_marginTop="@dimen/petition_57dp"
                    android:background="@color/petition_0461bc">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/submit"
                        android:textColor="@color/petition_ffffff"
                        android:textSize="@dimen/petition_14dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
