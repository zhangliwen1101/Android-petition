<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/petition_55dp"
            android:background="@color/petition_status_color">

            <RelativeLayout
                android:id="@+id/rl_petition_return"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/petition_14dp"
                    app:srcCompat="@drawable/petition_return" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/petition_add"
                    android:textColor="@color/petition_ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_petition_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/petition_10dp"
                    android:textColor="@color/petition_ffffff" />
            </RelativeLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/petition_edf2f6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_187dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_add_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="添加照片"
                                android:textColor="@color/petition_ffffff"
                                android:textSize="@dimen/petition_10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="@dimen/petition_150dp"
                                android:layout_height="@dimen/petition_120dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/petition_upload_picture" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="@dimen/petition_27dp"
                                android:layout_height="@dimen/petition_23dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/petition_picture" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_add_file"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="添加文档"
                                android:textColor="@color/petition_ffffff"
                                android:textSize="@dimen/petition_10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="@dimen/petition_150dp"
                                android:layout_height="@dimen/petition_120dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/petition_upload_file" />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="@dimen/petition_27dp"
                                android:layout_height="@dimen/petition_23dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/petition_upload" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_56dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_12dp"
                        android:text="@string/petition_picture_name"
                        android:textColor="@color/petition_565656"
                        android:textSize="@dimen/petition_12dp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <cn.aorise.petition.common.xlistview.HorizontalListView
                    android:id="@+id/mlistview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_106dp"
                    android:layout_marginTop="@dimen/petition_9dp"
                    android:numColumns="3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/petition_56dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/petition_12dp"
                        android:text="@string/petition_file_name"
                        android:textColor="@color/petition_565656"
                        android:textSize="@dimen/petition_12dp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/petition_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/petition_aeaeae" />
                </RelativeLayout>

                <cn.aorise.petition.common.xlistview.MyListView
                    android:id="@+id/mylistview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/petition_ffffff">

                </cn.aorise.petition.common.xlistview.MyListView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/petition_109dp"
                    android:layout_marginLeft="@dimen/petition_20dp"
                    android:layout_marginRight="@dimen/petition_12dp"
                    android:layout_marginTop="@dimen/petition_23dp"
                    android:gravity="center"
                    android:text="@string/petition_doc_docx_name"
                    android:textAllCaps="false"
                    android:textColor="@color/petition_1b43cb"
                    android:textSize="@dimen/petition_10dp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
