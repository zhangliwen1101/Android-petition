<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/petition_16dp"
        android:layout_marginRight="@dimen/petition_16dp"
        android:background="@color/petition_ffffff">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/petition_90dp"
            android:layout_height="@dimen/petition_90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            app:srcCompat="@drawable/petition_small_picture" />

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="@dimen/petition_90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:background="@color/petition_ffffff">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/petition_16dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/petition_delete" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
